[Unit]
Description=Set HTTP and HTTPS Proxy Environment Variables
After=network.target
Wants=network.target

[Service]
Type=oneshot
RemainAfterExit=yes
Environment=http_proxy=http://proxy.gpg123.cn:7890
Environment=https_proxy=http://proxy.gpg123.cn:7890
ExecStart=/bin/bash -c 'echo "Proxy environment variables set."'
ExecReload=/bin/bash -c 'echo "Service reloaded, variables are persistent."'

[Install]
WantedBy=default.target